---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Remote Sensing of Marine Systems - Academic Research Lab' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Marine Remote Sensing Lab</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  html {
    scroll-behavior: smooth;
  }
  
  /* Ensure fonts are properly loaded for Firefox */
  @supports (-moz-appearance: none) {
    body {
      font-family: 'Roboto', sans-serif !important;
    }
    
    h1, h2, h3, h4, h5, h6,
    .heading-hero, .heading-section, .heading-subsection, 
    .heading-card, .heading-small, .nav-brand {
      font-family: 'Orbitron', monospace !important;
    }
  }
  
  /* Standard font declarations */
  body {
    font-family: 'Roboto', sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6,
  .heading-hero, .heading-section, .heading-subsection, 
  .heading-card, .heading-small, .nav-brand {
    font-family: 'Orbitron', monospace;
  }
</style>